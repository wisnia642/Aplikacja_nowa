<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.michal_hit_kody.aplikacja_test.MainActivity"
    tools:showIn="@layout/app_bar_main"
    android:background="@drawable/acc">

    <TextView
        android:text="Nie masz konta, utwórz je teraz"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:id="@+id/textView4"
        android:layout_below="@+id/textView2"
        android:layout_centerHorizontal="true"
        android:textColorLink="?attr/colorControlHighlight"
        android:textColor="@android:color/background_dark"
        android:textColorHighlight="@android:color/black"
        android:textSize="16sp" />

    <TextView
        android:text="Pass:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/editText2"
        android:id="@+id/textView7"
        android:textSize="18sp"
        android:textColor="@android:color/background_dark"
        android:layout_alignTop="@+id/editText2"
        android:layout_marginLeft="5dp" />

    <Button
        android:text="Anuluj"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button2"
        android:layout_above="@+id/textView2"
        android:layout_alignEnd="@+id/editText2" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:layout_marginTop="25dp"
        android:id="@+id/editText"
        android:text="User:"
        android:textColorLink="?attr/actionMenuTextColor"
        android:layout_below="@+id/textView5"
        android:layout_centerHorizontal="true"
        android:hint="User:" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:layout_marginTop="15dp"
        android:id="@+id/editText2"
        android:scrollbarStyle="insideOverlay"
        android:textColorHint="@android:color/background_dark"
        android:textCursorDrawable="@android:color/background_dark"
        android:textColorLink="?attr/actionMenuTextColor"
        android:textColorHighlight="@android:color/holo_blue_light"
        android:layout_below="@+id/editText"
        android:layout_alignStart="@+id/editText" />


    <TextView
        android:text="Zapomniałeś hasła kliknij"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView2"
        android:textColorLink="?attr/colorControlHighlight"
        android:textColor="@android:color/background_dark"
        android:layout_below="@+id/button"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="21dp"
        android:textSize="16sp" />

    <com.google.android.gms.ads.AdView
        android:id="@+id/reklama"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        ads:adSize="BANNER"
        ads:adUnitId="@string/banner"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="53dp" />

    <Button
        android:text="Zaloguj"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button"
        android:layout_below="@+id/editText2"
        android:layout_alignStart="@+id/editText2" />

    <TextView
        android:text="Logowanie do aplikacji"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView5"
        android:textSize="25sp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
